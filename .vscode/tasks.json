    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "g++ text_renderer_metal.mm -o text_renderer_metal -framework Cocoa -framework Metal -framework MetalKit -framework AudioToolbox && ./text_renderer_metal",
            "group": {
                "kind":"build",
                "isDefault": true,
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./text_renderer_metal",
            "group": {
                "kind":"test",
                "isDefault": true,
            },
            "problemMatcher": "$msCompile"
        }
    ]
}